{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "ignorePatterns": ["dist/"],
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "off"
  }
}
